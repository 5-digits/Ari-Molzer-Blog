{% extends 'base.html.twig' %}

{% block title %}Admin Settings | Ari Molzer{% endblock %}
{% block body %}

    <div class="section">

            <div class="card">
                <div class="card-content">
                    <div class="row center-align">
                        <span class="card-title">Site Settings</span>
                    </div>
                </div>

                <div class="row">
                    <div class="col s8 offset-s2">
                        <ul class="tabs orange-text">
                            <li class="tab col s3"><a class="active" href="#theme_settings">Theme Settings</a></li>
                            <li class="tab col s3"><a href="#user_settings">User Permissions</a></li>
                            <li class="tab col s3"><a href="#api_settings">API Settings</a></li>
                            <li class="tab col s3"><a href="#advanced_settings">Advanced Settings</a></li>
                        </ul>
                    </div>
                </div>

                <div class="row" id="theme_settings">
                    <div class="col s8 offset-s2">

                        {{ include(':admin/components:theme-options.html.twig') }}

                    </div>
                </div>

                <div class="row" id="user_settings">
                    <div class="col s8 offset-s2">
                        {{ dump(user.firstname) }}
                    </div>
                </div>

                <div class="row" id="api_settings">
                    <div class="col s8 offset-s2">
                        {{ include(':admin/components:api-options.html.twig') }}
                    </div>
                </div>

                <div class="row" id="advanced_settings">
                    <div class="col s8 offset-s2">
                        {{ include(':admin/components:advanced-options.html.twig') }}
                    </div>
                </div>

            </div>

    </div>

{% endblock %}