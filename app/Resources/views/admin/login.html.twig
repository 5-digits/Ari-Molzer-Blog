{% extends 'base.html.twig' %}

{% block title %}Home!{% endblock %}
{% block body %}

    <div class="container content-container">
        <div class="section">
            <div class="row">
                <div class="col s12 m8 offset-m2">
                    <div class="card">
                        <div class="card-content">
                            <span class="card-title">Sign in with email</span>
                            <form>
                                <div class="row">
                                    <div class="input-field col l12">
                                        <i class="material-icons prefix">account_circle</i>
                                        <input id="icon_prefix" type="text" class="validate">
                                        <label for="icon_prefix">Email Address</label>
                                    </div>
                                    <div class="input-field col l12">
                                        <i class="material-icons prefix">lock</i>
                                        <input id="icon_lock" type="tel" class="validate">
                                        <label for="icon_lock">Password</label>
                                    </div>
                                    <div class="col l12 right-align">
                                        <a href="#" class="waves-effect waves-light btn">Sign Up</a>
                                        <a href="#" class="waves-effect waves-light btn">Sign In</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="card-action">
                            <p>Don't have an account? Sign-up with email, Google or Facebook.</p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

{% endblock %}