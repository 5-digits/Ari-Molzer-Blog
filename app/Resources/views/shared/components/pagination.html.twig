<div class="section">
    <div class="row">
        <ul class="pagination center-align">

            <li class="orange {% if pagination.current == pagination.first %}disabled lighten-1 {% else %}waves-effect{% endif %}"><a class="white-text" href="{{ path('post_list_view', {'pageNumber': pagination.first }) }}"><i class="material-icons">first_page</i></a></li>

            <li class="orange {% if pagination.current == pagination.previous %}disabled lighten-1 {% else %}waves-effect{% endif %}"><a class="white-text" href="{{ path('post_list_view', {'pageNumber': pagination.previous }) }}"><i class="material-icons">chevron_left</i></a></li>

            {% for item in pagination.items %}

                <li class="waves-effect orange {% if item.index == pagination.current %}active darken-2{% else %} hide-on-small-only{% endif %}"><a class="white-text" href="{{ path('post_list_view', {'pageNumber': item.index}) }}">{{ item.index }}</a></li>

            {% endfor %}

            <li class="orange {% if pagination.current == pagination.next %}disabled lighten-1 {% else %}waves-effect{% endif %}"><a class="white-text" href="{{ path('post_list_view', {'pageNumber': pagination.next }) }}"><i class="material-icons">chevron_right</i></a></li>

            <li class="orange {% if pagination.current == pagination.last %}disabled lighten-1 {% else %}waves-effect{% endif %}"><a class="white-text" href="{{ path('post_list_view', {'pageNumber': pagination.last }) }}"><i class="material-icons">last_page</i></a></li>
        </ul>
    </div>
</div>
