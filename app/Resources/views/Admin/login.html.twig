{% extends 'base.html.twig' %}

{% block title %}Welcome Back{% endblock %}
{% block body %}

    <div class="section">
        <div class="row card">
            <div class="card-content">

                <div class="row">

                    <div class="col s12 m8 offset-m2">

                        <span class="card-title">Sign in with email</span>

                        {{ form_start(form) }}

                        {{ form_widget(form.email) }}
                        {{ form_widget(form.password) }}
                        {{ form_widget(form.submit) }}

                        {{ form_end(form) }}

                    </div>

                </div>

                <div class="row">
                    <div class="s12 m8 offset-m2 card-action">
                        <p>Don't have an account? Sign-up with email, Google or Facebook.</p>
                    </div>
                </div>

            </div>
        </div>

    </div>

{% endblock %}